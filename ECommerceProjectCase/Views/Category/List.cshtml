@model List<LayerEntity.Concrete.Product>

<h2>Products</h2>

@if (Model.Count == 0)
{
    <p>No products found in this category.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("c")</td>
                </tr>
            }
        </tbody>
    </table>
}

